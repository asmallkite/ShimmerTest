<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#242424"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.lizheng.www.shimmertest.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textColor="#fff"
        android:text="@string/Hello" />

    <com.romainpiel.shimmer.ShimmerTextView
        android:id="@+id/shimmer_tv"
        android:text="@string/shimmer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="#4e4588"
        android:textSize="30sp"
        app:reflectionColor="#f00"
        android:fontFamily="sans-serif-condensed"/>

    <Button
        android:text="@string/toggle_animation"
        android:layout_gravity="center"
        android:onClick="toggleAnimation"
        android:textAllCaps="false"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <com.romainpiel.shimmer.ShimmerButton
        android:id="@+id/shimmer_btn"
        android:layout_gravity="center"
        android:textAllCaps="false"
        android:text="@string/shimmerButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</LinearLayout>
